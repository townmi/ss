<!DOCTYPE html>
<html lang="zh-CN" class="theme-{{theme}}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - {{systemName}}</title>
    
    <!-- 主题 CSS 变量 -->
    <link rel="stylesheet" href="/theme/{{theme}}/theme.css">
    
    <!-- 主题样式 -->
    <link rel="stylesheet" href="/theme/{{theme}}/static/css/theme.css">
    <link rel="stylesheet" href="/theme/{{theme}}/static/css/components.css">
    
    <!-- 自定义样式 -->
    {{#customStyles}}
    <link rel="stylesheet" href="{{.}}">
    {{/customStyles}}
</head>
<body>
    <!-- 导航栏 -->
    <nav class="navbar">
        {{> navbar}}
    </nav>
    
    <div class="layout-container">
        <!-- 侧边栏 -->
        <aside class="sidebar">
            {{> sidebar}}
        </aside>
        
        <!-- 主内容区 -->
        <main class="main-content">
            <!-- 面包屑导航 -->
            <div class="breadcrumb-wrapper">
                {{> breadcrumb}}
            </div>
            
            <!-- 页面内容 -->
            <div class="page-content">
                {{{content}}}
            </div>
        </main>
    </div>
    
    <!-- 页脚 -->
    <footer class="footer">
        {{> footer}}
    </footer>
    
    <!-- 主题脚本 -->
    <script src="/theme/{{theme}}/static/js/theme.js"></script>
    
    <!-- 自定义脚本 -->
    {{#customScripts}}
    <script src="{{.}}"></script>
    {{/customScripts}}
</body>
</html> 