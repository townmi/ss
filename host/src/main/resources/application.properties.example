# Host configuration
http.port=8080
http.host=0.0.0.0

# Plugin configuration
plugins.directory=libs/plugins
plugins.enabled=true

# Service configuration
services.directory=libs/services
services.enabled=true

# Logging configuration
logging.level=INFO
logging.pattern=%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n

# Specific logger levels (examples)
# logging.level.work.anyway.packages.data=WARN
# logging.level.work.anyway.packages.user=DEBUG
# logging.level.io.vertx=INFO
# logging.level.org.springframework=WARN
# logging.level.io.vertx.sqlclient=DEBUG

# Service container configuration
service.container.cache.enabled=true
service.container.lazy.init=true

# Vert.x configuration
vertx.worker.pool.size=20
vertx.event.loop.pool.size=2
vertx.max.event.loop.execute.time=2000000000
vertx.max.worker.execute.time=60000000000

# Development mode
dev.mode=false

# Datasource configuration
# Default datasource
datasource.default=mysql

# Main datasource configuration (PostgreSQL)
# datasource.main.type=postgresql
# datasource.main.host=localhost
# datasource.main.port=5432
# datasource.main.database=myapp_db
# datasource.main.user=postgres
# datasource.main.password=your_password_here
# datasource.main.maxPoolSize=10

# Test datasource configuration (PostgreSQL) - Optional
#datasource.test.type=postgresql
#datasource.test.host=localhost
#datasource.test.port=5432
#datasource.test.database=test_db
#datasource.test.user=test_user
#datasource.test.password=test_password_here
#datasource.test.maxPoolSize=5

# MySQL datasource example - Optional
datasource.mysql.type=mysql
datasource.mysql.host=localhost
datasource.mysql.port=3306
datasource.mysql.database=your_database_name
datasource.mysql.user=your_username
datasource.mysql.password=your_password_here
datasource.mysql.maxPoolSize=10
datasource.mysql.connectionTimeout=5000 
datasource.mysql.idleTimeout=600000 

